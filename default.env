COMPOSE_FILE=hyperliquid.yml

# Hyperliquid network to join; valid values are "Mainnet" or "Testnet"
CHAIN=Testnet
USERNAME=hyperliquid
NODE_TYPE=

# Enable the --serve-eth-rpc flag for hl-visor
ENABLE_EVM_RPC=true

# Port configuration
P2P_PORT_RANGE=4000-4010

# GPG Public Key URL for verifying binaries
PUB_KEY_URL=https://raw.githubusercontent.com/hyperliquid-dex/node/refs/heads/main/pub_key.asc

# Mainnet Root Node IPs (JSON format for override_gossip_config.json)
MAINNET_ROOT_IPS='[{"Ip": "35.213.122.164"}, {"Ip": "35.213.89.139"}]'
# Testnet Root Node IPs (JSON format for override_gossip_config.json)
TESTNET_ROOT_IPS='[{"Ip": "199.254.199.243"}, {"Ip": "23.106.227.201"}, {"Ip": "45.12.134.122"}, {"Ip": "45.250.255.44"}, {"Ip": "45.63.123.73"}, {"Ip": "72.46.86.237"}, {"Ip": "72.46.86.39"}]'

# Extra command-line flags for hl-visor
EXTRA_FLAGS=--replica-cmds-style recent-actions

# Logging setup options (e.g., info, debug, warn, error)
LOG_LEVEL=info

# Prune settings for the optional pruner service
# How often to run pruning (cron format: minute hour day(month) month day(week))
PRUNE_SCHEDULE="0 3 * * *"
# Data retention period in days
PRUNE_RETAIN_DAYS=7

# Traefik settings (used by hyperliquid.yml if ext-network.yml is included in COMPOSE_FILE)
# Domain for Traefik proxy
DOMAIN=local
EXPOSE_RPC=false
# Hostname for Traefik proxy rule
RPC_HOST=hyperliquid
# External Docker network name (must match Traefik's network)
DOCKER_EXT_NETWORK=traefik_default